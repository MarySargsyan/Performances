@model IEnumerable<Perfomans.Models.User>

@{
    ViewData["Title"] = "Index";
}


<div style="margin-top: 3em;" class="container">
    <div class="row">
        <div class="col-sm-8">
            <h1 style=" color: #515151" class="ui header">Employees</h1>
        </div>
        <div class="col-sm-4">
            <a class="SecondaryB" style="float:right" asp-action="Create"><i class="plus icon"></i>Create New</a>
        </div>
    </div>
</div>
<table style="margin-top: 2em;" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supervisor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SourName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supervisor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @if (item.StateId == 1)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                    }
                    @if (item.StateId == 2)
                    {
                       <i style="color:red" class="large x icon"></i>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
