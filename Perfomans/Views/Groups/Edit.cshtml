@model Perfomans.Models.Groups

<h4>Groups</h4>
<hr />
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div style="margin-top: 3em" class="ui segment">

            <h1 class="ui center aligned header">Edit</h1>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <input type="hidden" id="DepId" name="DepId" value="@ViewBag.DepId" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                @foreach (Parameters i in ViewBag.Parameters)
                {
                    <div class="ui checkbox">

                        <input name="selectedItems" type="checkbox" value="@i.Id" @(ViewBag.SelectedItems.Contains(i) ? "checked=\"checked\"" : "") />
                        <label> @i.Name &nbsp </label>
                    </div>
                }

                <div style="margin-left: 30%; margin-top:2em" class="form-group">
                    <input type="submit" value="Save" class="ui button" style="background-color: #54354F; color: white" />
                    <a style="background-color: transparent;color: #54354F;border: #54354F 0.2em solid; padding: 0.46em 1em; border-radius: 0.3em" asp-action="Index">Back to List</a>
                </div>
            </form>

        </div>

    </div>
    <div class="col-sm-3">
    </div>

</div>

