@model Perfomans.Models.Departments
@using Perfomans.Models

<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div style="margin-top: 3em" class="ui segment">
            <div style="padding:1em" class="ui form">
                <h1 class="ui center aligned header">Explore employee for<br />" @ViewBag.Group.Name "</h1>

                @using (Html.BeginForm("TopEmployees", "Departments", FormMethod.Get))
                {
                    <input type="hidden" id="GroupId" name="GroupId" value="@ViewBag.Group.id" />
                    <input type="hidden" id="DepId" name="DepId" value="@Model.Id" />
                    <input type="number" style="margin-top: 1.4em; width: 40%; margin-left: 30%" placeholder="Employees count" name="EmployeeCount" id="EmployeeCount" />
                    <button type="submit" style="margin-top:2em; margin-left:40%" class="SecondaryB">Create list</button>
                }
            </div>
        </div>

    </div>
    <div class="col-sm-3">
    </div>

</div>

