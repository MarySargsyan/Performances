@model Perfomans.Models.DepartmentParameters

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmentId" value="@ViewBag.DepId" />
            <div class="form-group">
                <label asp-for="ParameterId" class="control-label"></label>
                <select asp-for="ParameterId" class ="form-control" asp-items="ViewBag.ParameterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="mark" class="control-label"></label>
                <input asp-for="mark" class="form-control" />
                <span asp-validation-for="mark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


